{
  "name": "maven-auth-service",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Maven Centralized Authentication Service - auth.mavenmm.com",
  "scripts": {
    "build": "echo 'No build step required for Netlify Functions'",
    "dev": "netlify dev",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:local": "cd test-app-local && npm install && npm run dev",
    "test:hybrid": "concurrently \"npm run dev\" \"cd test-app-hybrid && npm install && npm run dev\"",
    "build:package": "cd teamwork-auth && npm run build",
    "publish:package": "cd teamwork-auth && npm publish"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookie": "^1.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.31",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@netlify/functions": "^3.0.1",
    "axios": "^1.8.3",
    "cookie": "^1.0.2",
    "graphql-request": "^7.2.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "ts-jest": "^29.3.2",
    "typescript": "~5.7.2"
  }
}
